<ui:UiPage x:Class="Serein.Windows.Pages.Settings.Serein"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:local="clr-namespace:Serein.Windows.Pages.Settings"
    mc:Ignorable="d"
    Scrollable="True"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Title="Bot">
    <StackPanel>
        <ui:ToggleSwitch Margin="0,7"
            Content="获取更新"
                         x:Name="EnableGetUpdate"
                         Click="EnableGetUpdate_Click"/>
        <ui:ToggleSwitch Margin="0,7"
            Content="获取公告"
                         x:Name="EnableGetAnnouncement"
                         Click="EnableGetAnnouncement_Click"/>
        <ui:ToggleSwitch Margin="0,7"
            Content="使用暗黑主题"
                         x:Name="UseDarkTheme"
                         Click="UseDarkTheme_Click"/>
        <ui:ToggleSwitch Margin="0,7"
            Content="主题跟随系统"
                         x:Name="ThemeFollowSystem"
                         Click="ThemeFollowSystem_Click"/>
    </StackPanel>
</ui:UiPage>
